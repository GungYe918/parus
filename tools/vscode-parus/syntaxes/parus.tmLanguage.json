{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Parus",
  "scopeName": "source.parus",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.parus",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.parus",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.parus",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.parus",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.parus",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.parus",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.parus",
          "match": "\\b\\d+(?:_\\d+)*(?:\\.\\d+(?:_\\d+)*)?(?:[iu]?(?:8|16|32|64|128|size)|f(?:32|64|128)?|lf)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.parus",
          "match": "\\b(def|struct|proto|class|actor|acts|if|elif|else|while|do|loop|in|return|break|continue|switch|case|default|let|set|mut|static|import|module|use|nest|as|with|require|spawn|commit|recast|manual|export|extern|layout|align|pure|comptime|init|deinit|pub|sub|and|or|not|xor|true|false|null)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.parus",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.parus",
          "match": "->|::|\\+\\+|\\?\\?=?|[+\\-*/%=&|!<>^.:]+"
        }
      ]
    }
  }
}
