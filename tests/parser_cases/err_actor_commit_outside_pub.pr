actor Counter {
  draft {
    value: i32;
  }

  init() = default;

  def sub get() -> i32 {
    commit;
    return draft.value;
  }

  def pub add(delta: i32) -> i32 {
    draft.value = draft.value + delta;
    commit;
    return draft.value;
  }
}

def main() -> i32 {
  set c = spawn Counter();
  return c.get();
}
